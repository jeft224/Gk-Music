{
	"compilerOptions": {
		// "target": "es6",
		"module": "commonjs",
		"outDir": "../dist",
		"baseUrl": "../build",
		"sourceMap": false,
		"rootDir": "../",
		"strict": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"suppressImplicitAnyIndexErrors": true,
		"types": [
			"node"
		],
		"lib": [
			"esnext",
			"es6"
		],
	},
	"include": [
		"../app/typescript/global.d.ts",
		"./**/*.ts",
	],
	"exclude": [
		"node_modules",
	],
}